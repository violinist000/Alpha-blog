<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-danger rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of your main thought" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                     <div class="col-10">
                    <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Write out your thoughts here!" %>
                        <div class="mt-4">
                        </div>
                    </div>
                </div>

                <!-- https://stackoverflow.com/questions/41664991/bootstrap-4-how-do-i-center-align-a-button -->
                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <%= f.submit class: "btn btn-outline-light btn-sm" %>
                        </div>
                    </div>
                </div>
            <% end%>
        </div>
    </div>
</div>

<div class="justify-text-center">
    <div class="mb-3">
        <%= link_to ' [ Cancel and return to articles listing ] ', articles_path, class: "text-dark text-center" %>
    </div>
</div>
