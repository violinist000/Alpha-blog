<h1 class="text-center mt-4">Category: <%= @category.name %></h1>

<% if logged_in? current_user.admin? %>
    <div class="text-center mt-4">
        <%= link_to "Edit Category name", edit_category_path(@category), class: "btn btn-outline-secondary" %>
    </div>
<%end%>

<h3 class="text-center mt-4">Your Thoughts</h3>


<%= render 'articles/article' %>

<div class="apple_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>