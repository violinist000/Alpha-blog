<h1 class="text-center mt-4">List of All Categories</h1>



  <div class="container">
   <% @categories.each do |category| %>
       <div class="row justify-content-md-center">
           <div class="col-4 mt-4">
              <div class="card text-center shadow-lg mb-5 bg-body rounded">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-dark" %></h5>
        
                </div>
                <div class="card-footer text-muted">
                  <small>Created <%= time_ago_in_words (category.created_at) %> ago,
                  edited <%= time_ago_in_words (category.updated_at) %> ago </small>
                </div>
              </div>
          </div>
      </div>
  <% end%>
</div>

<div class="apple_pagination">
    <%= will_paginate @categories, :container => false %>
</div>