<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>


<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
    <div class="text-center mt-4">
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-secondary" %>
    </div>
<%end%>

<h3 class="text-center mt-4">Your Thoughts</h3>


<%= render 'articles/article' %>

<div class="apple_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>